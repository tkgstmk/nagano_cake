<%= render :partial => 'admins/list' %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-10 mt-2">
      
    <h4><span class="text-dark bg-light">管理者ログイン</span></h4>
    
    <div class="col-8">
    <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
      <div class="mt-3">
        <%= f.label :メールアドレス %>　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mt-2">
        <%= f.label :パスワード %>　　　<%= f.password_field :password, autocomplete: "current-password" %>
      </div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>

      <div class="mt-3">
        　　　　　　　　<%= f.submit "ログイン" %>
      </div>
    <% end %>
    </div>
    
    </div>
  </div>
</div>

<%#= render "admins/shared/links" %>
