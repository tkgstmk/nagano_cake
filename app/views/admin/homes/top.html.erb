<%= render :partial => "admin/list" %>

<h2>注文履歴一覧</h2>
<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @oders.each do |oder| %>
          <tr>
            <td><%= l oder.created_at %></td>
            <td><%= oder.customrt_id.last_name %><%= oder.customrt_id.first_name %></td>
            <td><%= oder.count %></td>
            <td><%= oder.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>