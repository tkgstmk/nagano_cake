<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= link_to customer_path(@customer) do %>
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>

      <!--エラー文-->
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
      <% end %>

        <section class="table">
          <div class="title">
            <ul>
              <li>会員ID</li>
              <li>氏名</li>
              <li>フリガナ</li>
              <li>郵便番号</li>
              <li>住所</li>
              <li>電話番号</li>
              <li>メールアドレス</li>
              <li>会員ステータス</li>
            </ul>
          </div>
          <div class="body">
          <%= form_with model:@customer, local:true do |f| %>
            <ul>
              <li><%= @customer.id %></li>
              <li><%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"姓"%><%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名"%></li>
              <li><%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"姓カナ" %><%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"名カナ"%></li>
              <li><%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号"%></li>
              <li><%= f.text_area :address, autofocus: true, id:"inputAddress", placeholder:"住所" %></li>
              <li><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号"%></li>
              <li><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %></li>
              <li><%= f.text_area :address, autofocus: true, id:"inputAddress", placeholder:"住所" %></li>
              <li><%= form_with(model: @customer, local: true) do |f| %>
                    <%= f.radio_button :is_active, :valid, %>
                      <%= f.label :is_active, "有効", {value: :valid, style: "display: inline-block;"} %>
                    <%= f.radio_button :is_active, :withdrawal %>
                      <%= f.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
                  <% end %></li>
            </ul>
          </div>
        </section>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>