<%= render :partial => "admins/list" %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-10 mt-3">
      <h4><span class="text-dark bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>

      <!--エラー文-->
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のerrorが発生しました
          <% @customer.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
      <% end %>
      
      <%= form_with model: @customer, url: customer_path, local:true do |f| %>
      <div class="col-md-10">
        <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= f.radio_button :is_active, :valid, %>
                  <%= f.label :is_active, "有効", {value: :valid, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :withdrawal %>
                  <%= f.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
            </td>
          </tr>
          <%= f.submit "変更を保存" %>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>
          
    
