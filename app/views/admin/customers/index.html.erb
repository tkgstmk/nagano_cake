<h2>会員一覧</h2>
<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to "<p><%= @customer.last_name %><%= @customer.first_name %></p>", #会員詳細画面 %></td>
            <td><%= customer.email %></td>
            <td><%= customer.isactive %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>