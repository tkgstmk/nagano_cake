<%= render :partial => "admin/list" %>

<h4><span class="text-dark bg-light">会員一覧</span></h4>
<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped text-dark bg-light">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to "<p><%= @customer.last_name %><%= @customer.first_name %></p>", customer_path(:id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>