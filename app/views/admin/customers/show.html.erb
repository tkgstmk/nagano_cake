<%= render :partial => "admins/list" %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-10 mt-3">
      <h4><span class="text-dark bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h4>

      <% @customer.each do |customer| %>　
      <div class="col-md-10">
        <table class="table table-borderless">
          <tr>
            <td>会員ID</td>
            <td><%= customer.id %></td>
            <td></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= customer.last_name %>　<%= customer.first_name %></td>
            <td></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= customer.last_name_kana %>　<%= customer.first_name_kana %></td>
            <td></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= customer.postal_code %></td>
            <td></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= customer.telephone_number %></td>
            <td></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= customer.email %></td>
            <td></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= customer.is_active %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to '編集する' edit_customer_path(@customer) %></td>
            <td><%= link_to '注文履歴一覧画面を見る' %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>