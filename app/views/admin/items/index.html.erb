<%= render :partial => "public/list" %>

<%#= flash[:alert] %>
<%#= flash[:notice] %>
<%#= flash[:success] %>
<script src="https://kit.fontawesome.com/4901d39935.js" crossorigin="anonymous"></script>

<h2>商品一覧</h2>
<%= link_to "", new_items_path, class:"far fa-plus-square" %>
  <!--エラー文-->
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のerrorが発生しました
      <% @item.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-10">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item(@item.id) %></td>
            <td><%= link_to item.name, item_path %></td>
            <td><%= item.price %></td>
            <td><%= item.genre %></td>
            <td><%= item.active %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>