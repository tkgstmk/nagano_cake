<%= render :partial => "admins/list" %>

<%#= flash[:notice] %>
<%#= flash[:success]  %>

        
<div class="container">
  <div class="row">
    <h4><span class="text-dark bg-light">商品詳細</span></h4>
  </div>
  
  <div class="row">
    <div class="col-4 mt-2">
      <!--画像-->
      <div class="items">
        <%= attachment_image_tag @item, :image, size: "450x450", fallback: "no_image.jpg" %>
      </div>
    </div>
    <div class="col-8 mt-2">
      <!--紹介文-->
      <div class="flex-item">
        <table class="table table-borderless ml-5">
          <tr>
            <td width="15px">商品名</td>  
            <td width="80px"><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>  
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>  
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>  
            <td><%= (@item.price * 1.1).to_i %>円(<%= @item.price %>円)</td>
          </tr>
          <tr>
            <td>販売ステータス</td>  
            <td><font color="#008000"><%= @item.is_active %></font></td>
          </tr>
        </table>
        <div class="center-block">
          <%= link_to "編集する", edit_admin_item_path, class:'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
  
</div>
        

  
