<%= render :partial => "public/list" %>

<h2>注文履歴詳細</h2>
<section class="table">
  <div class="title">
    <ul>
      <li>購入者</li>
      <li>注文日</li>
      <li>配送先</li>
      <li>支払方法</li>
      <li>注文ステータス</li>
    </ul>
  </div>
  <div class="body">
    <ul>
      <%= link_to customer_path(@customer) do %>
      <li><%= @customer.last_name %><%= @customer.first_name %></li>
      <li><%= l @customer.created_at, format: :short %></li>
      <li><%= @customer.address %></li>
      <li><%= @customer.payment_method %></li>
      <li><%= form_with model: @customer do |f| %>
            <%= f.select :is_active, [["入金待ち", "入金待ち"], ["入金確認", "入金確認"], ["製作中", "製作中"], ["発送準備中", "発送準備中"]], include_blank: @customer.is_active %>
            <%= f.submit '更新'%>
          <% end %>
      </li>
      <% end %>
    <ul>
  </div>
</section>

<section class="oder_list">
  <div class="list">
