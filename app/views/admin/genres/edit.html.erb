<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>ジャンル編集画面</h2>
 <!--エラー文-->
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のerrorが発生しました
    <% @genre.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<%= form_with model: @genre, url:genre_path(@genre), local:true do |f| %>
<p>ジャンル名</p><%= f.text_field :name %><%= f.submit '変更を保存' %>
<% end %>