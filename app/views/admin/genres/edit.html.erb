<%= render :partial => "admins/list" %>

<div class="container pt-2 px-5 px-sm-0" >
<h4>ジャンル編集画面</h4>
 <!--エラー文-->
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のerrorが発生しました
    <% @genre.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<div class="m-3">
  <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
  <p class="mx-2">ジャンル名</p>
  <%= f.text_field :name, class:"mx-2" %>
  <%= f.submit '変更を保存', class:"btn btn-success mx-2"%>
<% end %>
</div>