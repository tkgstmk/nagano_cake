<%= render :partial => 'admins/list' %>

<%#= flash[:alert] %>
<%= flash[:notice] %>
<%= flash[:success] %>
<div class="container">
  <div class="row">
    <h4><span class="text-dark bg-light">ジャンル一覧・追加</span></h4>
  </div>
  
  <div class="row m-5">
    <div class="nav pull-right nav-pills">
      <p>ジャンル名</p>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <%#= form_with model: @address, url: address_path(@address), local: true do |f| %>
      <div class="mx-5">
        <%= f.text_field :name %>　<%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-3">
    <table class="table table-hover">
      <tr>
        <td class="table-active w-40">ジャンル</td>
        <td class="table-active w-15"></td>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
        <td class="w-40"><%= genre.name %></td>
        <td class="w-15 text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
      </tr>
      <% end %>
    </table>
  </div>
  
</div>