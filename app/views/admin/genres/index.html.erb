<%#= flash[:alert] %>
<%#= flash[:notice] %>
<%#= flash[:success] %>

<div class="container px-5 px-sm-0" >
  <div class="row">
    <div class="col-md-3">
      <h2>ジャンル一覧・追加</h2>
        <!--エラー文-->
          
        <div class="create">
          <p>ジャンル名</p>
          <%= form_with model: @genre, url: '/b', local:true do |f| %>
          <p>title</p>
          <%= f.text_field :name %>
          <%= f.submit '新規登録' %>
          <% end %>
        </div>
    </div>
      
          
    <div class="col-md-8 offset-md-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_book_path(book) %></td>
          </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>