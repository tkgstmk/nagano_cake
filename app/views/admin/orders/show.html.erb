<%= render :partial => "admins/list" %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-10 mt-3">
      <h4><span class="text-dark bg-light">注文履歴詳細</span></h4>
    </div>
    
    <div class="table table-borderless">
      <tr>
        <td>購入者</td>
        <td><%= link_to "#{ @order.customer.last_name } #{ @order.customer.first_name }", customer_path(@customer) %></th>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= l @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= @order.address %></td>
      </tr>
      <tr>
      <td>支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <%= form_with model: @order do |f| %>
      <tr>
        <td>注文ステータス</td>
        <td><%= f.collection_select :status, @oder, :id, {include_blank:'選択してください'} %> <%= f.submit '更新', class:"btn btn-secondary" %></td>
      <tr>
      <% end %>
    </div>
      
    <% @sum = 0 %>

    <div class="table">
      <tr>
        <th bgcolor="#f5f5f5">商品名</th>
        <th bgcolor="#f5f5f5">単価（税込）</th>
        <th bgcolor="#f5f5f5">数量</th>
        <th bgcolor="#f5f5f5">小計</th>
        <th bgcolor="#f5f5f5">製作ステータス</th>
      </tr>
      <tr>
        <td><%= @order.item.name %></td>
        <td><%= (@order.item.price * 1.1).to_i %></td>
        <td><%= @order.amount %></td>
        <td><%= (@oder.item.price * @order.amount).to_i %></td>
        <%= form_with model: @order do |f| %>
        <td><%= f.collection_select :status, @oder, :id, {include_blank:'選択してください'} %> <%= f.submit '更新', class:"btn btn-secondary" %></td>
        <% end %>
      </tr>
    </div>
    
    <div class="table table-borderless">
      <tr>
        <td>商品合計</td>
        <td><%= (@oder.price).to_i %>円</td>
      </tr>
      <tr>
        <td>送料</td>
        <td><%= (@oder.postage %>円</td>
      </tr>
      <tr>
        <td>請求額</td>
        <td><%= (@oder.total_payment).to_i %>円</td>
      </tr>
    </div>
  </div>
</div>