<%= render :partial => "public/list" %>
<div class="container">
  <div class="row no-gutters">
    <div class="col-10 mt-2">
      
      <h4><span class="text-dark bg-light">注文履歴一覧</span></h4>
      
      <table class="table table-bordered mt-4">
        <tr>
          <td bgcolor="#D3D3D3">注文日</td>
          <td bgcolor="#D3D3D3">配送先</td>
          <td bgcolor="#D3D3D3">注文商品</td>
          <td bgcolor="#D3D3D3">支払金額</td>
          <td bgcolor="#D3D3D3">ステータス</td>
          <td bgcolor="#D3D3D3">注文詳細</td>
        <tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td>
            〒<%= order.postal_code%>
            <%= order.address %>
            <%= order.name %>
          </td>
          <td><%= order.item %></td>
          <td><%= order.total_payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to '表示する', order_path(order), method: :get, class: "btn btn-primary" %>></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
  