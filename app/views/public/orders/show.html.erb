<%= render :partial => "public/list" %>

<div class="container pt-2 px-5 px-sm-0" >
  <!--<h4><span class="text-dark bg-light">マイページ</span></h4>-->
<h4>注文履歴詳細</h4>
<%#= f.submit '編集する', class:"btn btn-success" %>


<div class="container px-1 px-sm-0" >
  <div class="">
    <p>注文情報</p>
    <table>
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>
      <tr>
        <td>注文日</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
    </table>

    <p>請求情報</p>
    <table>
      <tr>
        <td>商品合計</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= f.text_field :last_name %><td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= f.text_field :last_name %><td>
      </tr>
    </table>
  </div>

  <p>注文内容</p>
    <table>
      <tr>
        <td>商品</td>
        <td>単価（税込）</td>
        <td>個数</td>
        <td>小計</td>
      </tr>
      <%= form_with model: @order_details, url: customers_path, local:true do |f| %>
      <tr>
        <td><%= f.text_field :postal_code %><td>
        <td><%= f.text_field :amount %><td>
        <td><%= f.text_field :price %><td>
        <td><%= f.text_field : %><td>
      </tr>
    </table>
  </div>
</div>